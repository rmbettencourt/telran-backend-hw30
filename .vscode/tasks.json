	"version": "2.0.0",
	"tasks": [
		{
			"label": "mypy launch",
			"type": "shell",
			"command": "mypy main.py"
		},
		{
			"label": "run unit tests",
			"type": "shell",
			"command": "python",
			"args": ["-m", "unittest", "discover", "tests", "-v"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			},
			"problemMatcher": []
		},
		{
			"label": "run unit tests (conda)",
			"type": "shell",
			"command": "conda",
			"args": [
				"run",
				"-n",
				"telran-hw29",
				"python",
				"-m",
				"unittest",
				"discover",
				"tests",
				"-v"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			}
		}
	]
}
